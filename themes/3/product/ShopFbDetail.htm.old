		<script src="{$web['static_temp_mod']}/ShopFB/js/bootstrap.min.js"></script>
		<script>
		$(document).ready(function(){
			$('[data-toggle="tooltip"]').tooltip();


			$('body').on('click', '.add-cart', function(event) {
				event.preventDefault();
				var total=$('.cart .number').text();
				total=parseInt(total)+1;
				$('.cart .number').text(total);
				//
				$.ajax({
					url: $('base').attr('href')+'/product-shopfb-ajaxAddCart'+$('base').attr('ext'),
					type: 'POST',
					dataType: 'html',
					data: {
						idProduct: $(this).attr('data-id-product'),
						quantity:1,
						s_name:$('input[name="s_name"]').val(),
						idw:$('input[name="idw"]').val(),
					},
				})
				.success(function() {
					window.location.reload();
				});

			});
			$('body').on('click', '.cart', function(event) {
				event.preventDefault();
				$('#cart').modal('show');

			});

			$('body').on('click', '.removeCartItem', function(event) {
				event.preventDefault();
				$.ajax({
					url: $('base').attr('href')+'/product-ajaxCart-ajaxRemoveCart'+$('base').attr('ext'),
					type: 'POST',
					dataType: 'html',
					data: {
						idProduct: $(this).attr('data-product'),
						quantity:$(this).attr('data-size')
					},
				})
				.success(function(res) {
					$(this).parents('tr').remove();
					window.location.reload();
				});
			});
			  $(".payment").on("click",function(){
			  	 $.ajax({
			  	 	url: $('base').attr('href')+'/product-ajaxCart-ajaxSaveCart'+$('base').attr('ext'),
			  	 	type: 'POST',
			  	 	dataType: 'json',
			  	 	data: {param1: 'value1'},
			  	 })
			  	 .success(function() {

			  	 });
			  	 window.open($(this).attr('data-href'),'_blank');
		         return false;
		     });
		});
		</script>
